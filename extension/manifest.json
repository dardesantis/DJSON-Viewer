{
  "name": "DJSON Viewer and Formatter",
  "short_name": "DJSON Viewer",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "Simple extension to format and view JSON, from Web or File. Open source.",
  "homepage_url": "https://github.com/dardesantis/DJSON-Viewer",
  "minimum_chrome_version": "21",
  "icons": {
       "128": "images/128.png",
       "32": "images/32.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "images/32.png"
    },
    "default_title": "DJSON Viewer",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "popup.html",
    "persistent": true
  },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["js/content.js"], "run_at": "document_start" }
  ],
  "permissions":["clipboardWrite", "tabs"]
}